{
    "$schema": "vscode://schemas/color-theme",
    "name": "Asir Custom Theme", 
    "type": "light", // "dark" または "light"

    // シンタックスハイライトの色
    "tokenColors": [
        // デフォルトのテキスト色
        {
            "scope": "text",
            "settings": {
                "foreground": "#1E1E1E" 
            }
        },
        // コメント
        {
            "scope": [
                "comment",
                "comment.line.number-sign.rr",
                "comment.block.rr",
                "comment.block.documentation.rr"
            ],
            "settings": {
                "foreground": "#008000" 
            }
        },
        // キーワード (if, while, for, returnなど)
        {
            "scope": "keyword.control.rr",
            "settings": {
                "foreground": "#0000FF" 
            }
        },
        // 組み込み関数 (load, import, ctrl, cputimeなど)
        {
            "scope": "support.function.builtin.rr",
            "settings": {
                "foreground": "#6A0DAD" 
            }
        },
        // 文字列 (ダブルクォート)
        {
            "scope": "string.quoted.double.rr",
            "settings": {
                "foreground": "#A31515" 
            }
        },
        // エスケープ文字
        {
            "scope": "constant.character.escape.rr",
            "settings": {
                "foreground": "#8B0000" 
            }
        },
        // 数値
        {
            "scope": "constant.numeric.rr",
            "settings": {
                "foreground": "#098677" 
            }
        },
        // 演算子 (+, -, *, / など)
        {
            "scope": "keyword.operator.rr",
            "settings": {
                "foreground": "#0070C0" 
            }
        },
        // 言語定数 (true, false, null など)
        {
            "scope": "constant.language.rr",
            "settings": {
                "foreground": "#800080" 
            }
        },
        // 型 (int, poly, listなど)
        {
            "scope": "storage.type.rr",
            "settings": {
                "foreground": "#007F7F" 
            }
        },
        // 区切り文字 (カンマ, セミコロン, コロンなど)
        {
            "scope": "punctuation.separator.delimiter.rr",
            "settings": {
                "foreground": "#505050" 
            }
        },
        // 括弧、ブラケット
        {
            "scope": [
                "punctuation.bracket.square.rr",
                "punctuation.bracket.curly.rr",
                "punctuation.bracket.parenthesis.rr"
            ],
            "settings": {
                "foreground": "#505050" 
            }
        }

        // ユーザー定義関数名
        // {
        //     "scope": "entity.name.function.rr",
        //     "settings": {
        //         "foreground": "#606000" // オリーブグリーン
        //     }
        // },
        // 変数名
        // {
        //     "scope": "variable.other.rr",
        //     "settings": {
        //         "foreground": "#333333" // ほとんど黒に近いグレー
        //     }
        // }
    ]
}